<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="@color/pink_custom"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_stt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="1"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_treasure"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/tv_stt"
            android:src="@drawable/pngkhobau"/>
        <TextView
            android:id="@+id/tv_treasure_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_toEndOf="@id/img_treasure"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Kho bÃ¡u"
            />
        <TextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_toEndOf="@id/tv_treasure_name"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="1000"
            />
        <Button
            android:id="@+id/btn_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_toEndOf="@id/tv_treasure_name"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#03C80C"
            android:textColor="@color/black"
            android:visibility="gone"
            android:text="Get"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>